// Archivo de prueba para casting

System.out.println("=== Pruebas de Casting ===");

// Widening Casting (char -> int -> float -> double)
System.out.println("Widening Casting:");

char c = 'A';
System.out.println("char original: ", c);

int i = (int) c;
System.out.println("char a int: ", i);

float f = (float) i;
System.out.println("int a float: ", f);

double d = (double) f;
System.out.println("float a double: ", d);

System.out.println("");

// Narrowing Casting (double -> float -> int -> char)
System.out.println("Narrowing Casting:");

double d2 = 97.75;
System.out.println("double original: ", d2);

float f2 = (float) d2;
System.out.println("double a float: ", f2);

int i2 = (int) f2;
System.out.println("float a int: ", i2);

char c2 = (char) i2;
System.out.println("int a char: ", c2);

System.out.println("");

// Casting con operaciones aritméticas
System.out.println("Casting en operaciones:");

int num1 = 5;
int num2 = 2;
float resultado = (float) num1 / (float) num2;
System.out.println("(float)5 / (float)2 = ", resultado);

