System.out.println("=== PRUEBA DE FUNCIONES SIN PARAMETROS ===");

// Función sin parámetros con la nueva sintaxis (sin 'func')
int obtenerNumero(){
    return 42;
};

// Función sin parámetros que devuelve un float
float obtenerPi(){
    return 3.14159f;
};

// Función sin parámetros que devuelve un double
double obtenerE(){
    return 2.71828;
};

// Función sin parámetros que devuelve un string
String obtenerSaludo(){
    return "Hola Mundo";
};

// Función sin parámetros que devuelve un boolean
boolean esVerdadero(){
    return true;
};

// Función sin parámetros que devuelve un char
char obtenerLetra(){
    return 'A';
};

// Función sin parámetros que realiza cálculos internos
int calcularDoble(){
    int base = 21;
    return base * 2;
};

System.out.println("=== PROBANDO FUNCIONES SIN PARAMETROS ===");

// Probando función que devuelve int
int numero = obtenerNumero();
System.out.println("obtenerNumero() = ");
System.out.println(numero);

// Probando función que devuelve float
float pi = obtenerPi();
System.out.println("obtenerPi() = ");
System.out.println(pi);

// Probando función que devuelve double
double e = obtenerE();
System.out.println("obtenerE() = ");
System.out.println(e);

// Probando función que devuelve string
String saludo = obtenerSaludo();
System.out.println("obtenerSaludo() = ");
System.out.println(saludo);

// Probando función que devuelve boolean
boolean verdadero = esVerdadero();
System.out.println("esVerdadero() = ");
System.out.println(verdadero);

// Probando función que devuelve char
char letra = obtenerLetra();
System.out.println("obtenerLetra() = ");
System.out.println(letra);

// Probando función con cálculos internos
int doble = calcularDoble();
System.out.println("calcularDoble() = ");
System.out.println(doble);

System.out.println("=== FUNCIONES SIN PARAMETROS FUNCIONANDO CORRECTAMENTE ===");