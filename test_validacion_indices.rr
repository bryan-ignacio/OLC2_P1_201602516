// Test completo de validación de índices para vectores y matrices

System.out.println("=== TEST DE VALIDACION DE INDICES ===");

// Test 1: VECTORES - Validación de índices
System.out.println("--- VECTORES: Validación de índices ---");

int[] vector = {10, 20, 30, 40, 50};

// Acceso válido
System.out.println("Accesos válidos:");
System.out.println(vector[0]);  // Primer elemento
System.out.println(vector[2]);  // Elemento del medio  
System.out.println(vector[4]);  // Último elemento

System.out.println("Errores en vectores:");

// Error 1: Índice negativo
System.out.println(vector[-1]);

// Error 2: Índice mayor al tamaño
System.out.println(vector[5]);

// Error 3: Índice muy grande
System.out.println(vector[100]);

// Test 2: MATRICES - Validación de índices
System.out.println("--- MATRICES: Validación de índices ---");

int[][] matriz = {{1, 2, 3}, {4, 5, 6}};  // Matriz 2x3

// Accesos válidos
System.out.println("Accesos válidos:");
System.out.println(matriz[0][0]);  // Primera posición
System.out.println(matriz[0][2]);  // Última columna, primera fila
System.out.println(matriz[1][1]);  // Centro
System.out.println(matriz[1][2]);  // Última posición

System.out.println("Errores en matrices:");

// Error 4: Fila negativa
System.out.println(matriz[-1][0]);

// Error 5: Columna negativa  
System.out.println(matriz[0][-1]);

// Error 6: Fila fuera de rango
System.out.println(matriz[2][0]);  // Solo hay filas 0 y 1

// Error 7: Columna fuera de rango
System.out.println(matriz[0][3]);  // Solo hay columnas 0, 1, 2

// Error 8: Ambos índices fuera de rango
System.out.println(matriz[10][10]);

// Test 3: Validación en asignaciones
System.out.println("--- ASIGNACIONES: Validación de índices ---");

float[] nums = new float[3];
float[][] datos = new float[2][2];

// Asignaciones válidas
nums[0] = 1.5f;
nums[2] = 3.5f;
datos[0][1] = 2.5f;
datos[1][0] = 4.5f;

System.out.println("Asignaciones válidas:");
System.out.println(nums[0]);
System.out.println(nums[2]);
System.out.println(datos[0][1]);
System.out.println(datos[1][0]);

System.out.println("Errores en asignaciones:");

// Error 9: Asignación a índice inválido en vector
nums[5] = 9.9f;

// Error 10: Asignación a índice inválido en matriz
datos[3][3] = 7.7f;

// Test 4: Validación con variables como índices
System.out.println("--- INDICES CON VARIABLES ---");

char[] letras = {'A', 'B', 'C'};
int indice_valido = 1;
int indice_invalido = 5;

System.out.println("Con índice válido:");
System.out.println(letras[indice_valido]);

System.out.println("Con índice inválido:");
System.out.println(letras[indice_invalido]);

System.out.println("=== FIN TEST VALIDACION ===");