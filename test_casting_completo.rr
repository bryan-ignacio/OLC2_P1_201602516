// Prueba completa de casting con todos los tipos

System.out.println("=== Casting entre tipos primitivos ===");

// Test b√°sico de casting
int numero = 100;
System.out.println("Numero original (int): ", numero);

char caracter = (char) numero;
System.out.println("Como char: ", caracter);

float numeroFloat = (float) numero;
System.out.println("Como float: ", numeroFloat);

double numeroDouble = (double) numero;
System.out.println("Como double: ", numeroDouble);

// Test con decimales
double pi = 3.14159;
System.out.println("PI original (double): ", pi);

float piFloat = (float) pi;
System.out.println("PI como float: ", piFloat);

int piInt = (int) pi;
System.out.println("PI como int: ", piInt);

// Test con operaciones y casting
int a = 7;
int b = 3;
float division = (float) a / (float) b;
System.out.println("7/3 con casting a float: ", division);

// Test boolean casting
int uno = 1;
int cero = 0;
System.out.println("Entero 1: ", uno);
System.out.println("Entero 0: ", cero);