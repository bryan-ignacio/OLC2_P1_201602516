// Ejemplo de uso de array.length en un for - VERSIÓN CORREGIDA
System.out.println("=== PRUEBA DE FOR CON ARRAY.LENGTH ===");

String[] dispositivos = {"Laptop", "Mouse", "Teclado", "Monitor", "Impresora"};

System.out.println("Recorriendo array con for tradicional:");
System.out.println("Array tiene " + String.valueOf(dispositivos.length) + " elementos");

for (int i = 0; i < dispositivos.length; i += 1) {
    System.out.println("Posición " + String.valueOf(i) + ": " + dispositivos[i]);
}

System.out.println("=== PRUEBA CON ARRAY DE NÚMEROS ===");

int[] numeros = {10, 20, 30, 40, 50};
System.out.println("Array numeros tiene " + String.valueOf(numeros.length) + " elementos");

for (int j = 0; j < numeros.length; j += 1) {
    System.out.println("numeros[" + String.valueOf(j) + "] = " + String.valueOf(numeros[j]));
}

System.out.println("=== USANDO ARRAY.LENGTH EN CONDICIONES ===");

boolean[] estados = {true, false, true, true, false};
int contadorTrue = 0;

for (int k = 0; k < estados.length; k += 1) {
    if (estados[k] == true) {
        contadorTrue += 1;
    }
}

System.out.println("De " + String.valueOf(estados.length) + " elementos, " + String.valueOf(contadorTrue) + " son true");

System.out.println("=== FIN DE PRUEBAS ===");