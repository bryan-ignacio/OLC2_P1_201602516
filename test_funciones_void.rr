System.out.println("=== PRUEBA DE FUNCIONES VOID ===");

// Función void sin parámetros
void saludar(){
    System.out.println("Hola desde función void");
};

// Función void con parámetros
void imprimir(String mensaje){
    System.out.println("Mensaje: ");
    System.out.println(mensaje);
};

// Función void con múltiples parámetros
void mostrarSuma(int a, int b){
    int resultado = a + b;
    System.out.println("La suma es: ");
    System.out.println(resultado);
};

// Función void con lógica condicional
void verificarNumero(int numero){
    if (numero > 0) {
        System.out.println("El número es positivo");
    } else {
        System.out.println("El número es negativo o cero");
    }
};

System.out.println("=== PROBANDO FUNCIONES VOID ===");

// Llamar función void sin parámetros
saludar();

// Llamar función void con un parámetro
imprimir("Esta es una prueba");

// Llamar función void con múltiples parámetros
mostrarSuma(10, 20);

// Llamar función void con lógica
verificarNumero(5);
verificarNumero(-3);

System.out.println("=== FUNCIONES VOID IMPLEMENTADAS CORRECTAMENTE ===");